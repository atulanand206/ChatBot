<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.App.Form.Title" parent="TextAppearance.App.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.Component.Form.Title" parent="AppTheme.Component">
        <item name="android:layout_marginStart">@dimen/margin_x_small</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Form.Title</item>
    </style>

    <style name="TextAppearance.App.Category" parent="TextAppearance.App.Normal">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Component.Spinner" parent="AppTheme.Component">
        <item name="android:paddingEnd">@dimen/padding_extra_small</item>
        <item name="android:paddingStart">@dimen/padding_extra_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Category</item>
    </style>

    <style name="TextAppearance.App.Form.Label" parent="TextAppearance.App.XSmall">
        <item name="android:textColor">@color/history</item>
    </style>

    <style name="App.Component.Form.Label" parent="AppTheme.Component">
        <item name="android:layout_marginStart">@dimen/margin_x_small</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Form.Label</item>
    </style>

    <style name="TextAppearance.App.Form.Message" parent="TextAppearance.App.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="App.Component.Form.Message" parent="AppTheme.Component">
        <item name="android:layout_marginStart">@dimen/margin_x_small</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Form.Message</item>
    </style>

    <style name="App.Input.ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">@dimen/font_extra_small</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="App.Component.Navigation.Recycler" parent="AppTheme.Component">

    </style>

</resources>