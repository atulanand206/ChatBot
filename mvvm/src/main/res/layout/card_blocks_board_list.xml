<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.creations.mvvm.ui.blocks.preset.PresetContract.ViewModel" />
    </data>

    <LinearLayout
        app:visibility="@{viewmodel.visibility}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:orientation="vertical"
        android:onClick="@{() -> viewmodel.onClick()}"
        bind:bkgrndColor="@{viewmodel.backgroundColor}">

        <TextView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="@dimen/margin_normal"
            android:textStyle="bold"
            android:text="ROWS"
            android:textSize="@dimen/font_xxx_large"
            android:textColor="@{@color/white}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            bind:recyclerLayoutManager="@{viewmodel.layoutType}"
            bind:adapter="@{viewmodel.adapter}"/>

    </LinearLayout>
</layout>