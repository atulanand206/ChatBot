<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <import type="com.creations.mvvm.ui.blocks.add.AddContract.ViewModel"/>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="com.creations.mvvm.ui.blocks.item.ItemContract.ViewModel" />
    </data>

    <LinearLayout
        app:visibility="@{viewmodel.visibility}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="@color/message_progress">

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/margin_small"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@{viewmodel.title}"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_normal"
                    android:textSize="@dimen/font_xxx_large" />

                <LinearLayout
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/close"
                    android:visibility="@{viewmodel.visibility}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{() -> viewmodel.onRecyclerItemClick()}">

                    <include layout="@layout/icon_next"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    bind:recyclerLayoutManager="@{viewmodel.layoutType}"
                    bind:adapter="@{viewmodel.adapter}"/>

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:text="@{viewmodel.subHeader}"
                    android:textSize="@dimen/font_normal"
                    android:textStyle="italic"
                    android:textColor="@color/black" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>