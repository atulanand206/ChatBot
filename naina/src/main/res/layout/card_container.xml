<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.creations.naina.ui.container.ContainerContract.ViewModel" />
    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/config"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:spinnerMode="dropdown"
            android:entries="@{viewmodel.entries}"
            app:onItemSelected="@{viewmodel.itemSelectedListener}"
            app:selectedItemPosition="@{viewmodel.configurationIndex}"
            style="@style/App.Component.Profile.Value" />

        <include
            android:id="@+id/divider"
            android:layout_centerHorizontal="true"
            layout="@layout/content_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_divider"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/config" />

        <LinearLayout
            android:id="@+id/content"
            android:orientation="vertical"
            android:layout_below="@id/divider"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/card_text_view_model"
              bind:viewmodel="@{viewmodel.entityNameViewModel}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.proprietor}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.workAddress}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.siteAddress}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.gstIn}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.mobileNumber}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.bankDetails}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.accountNumber}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.ifsc}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.authorisedSignatory}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.gst}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.cgst}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.sgst}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.igst}"/>

            <include layout="@layout/card_text_view_model"
                bind:viewmodel="@{viewmodel.rate}"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/content"
            android:id="@+id/buttons"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:onClick="@{() -> viewmodel.onUploadClicked()}"/>

        </LinearLayout>
    </RelativeLayout>
</layout>