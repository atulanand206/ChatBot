<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.creations.naina.ui.container.ContainerContract.ViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/content_entity_header"
            bind:viewmodel="@{viewmodel}"/>

        <include layout="@layout/content_entity_items"
            bind:viewmodel="@{viewmodel}"/>

        <include layout="@layout/content_bank_header"
            bind:viewmodel="@{viewmodel}"/>

        <include layout="@layout/content_bank_items"
            bind:viewmodel="@{viewmodel}"/>

        <include layout="@layout/content_rate_header"
            bind:viewmodel="@{viewmodel}"/>

        <include layout="@layout/content_rate_items"
            bind:viewmodel="@{viewmodel}"/>

    </LinearLayout>

</layout>