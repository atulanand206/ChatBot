<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.App.Value.Details" parent="TextAppearance.App.XSmall">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="App.Component.Profile.Value" parent="AppTheme.Component">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_marginTop">@dimen/margin_x_small</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Value.Details</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="App.Component.ProgressBar" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
